<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    android:layout_gravity="center"
    android:padding="25dp">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_gravity="center"
        app:srcCompat="@drawable/alert" />

    <TextView
        android:id="@+id/txtnombrecarview"
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="2dp"
        android:layout_gravity="center"
        android:textAlignment="center"
        android:text="Â¿DESEA ELIMINAR EL COBRO O DEUDA?"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView8"
        android:layout_gravity="center"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:text="Si elimina, se elminaran todos los datos y registros almacenados"
        android:textColor="@color/black"/>

    <LinearLayout
        android:layout_marginTop="25dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btncancelareliminarcobro"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:fontFamily="@font/atma_semibold"
            style="?attr/materialButtonOutlinedStyle"
            app:strokeColor="@color/cancelar"
            android:text="NO"
            android:layout_gravity="end"
            android:textColor="@color/cancelar"
            app:cornerRadius="20dp"
            android:textSize="16sp" />

        <Button
            android:id="@+id/btnaceptareliminarcobro"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:fontFamily="@font/atma_semibold"
            style="?attr/materialButtonOutlinedStyle"
            app:strokeColor="@color/aceptar"
            android:text="SI"
            android:layout_gravity="end"
            android:textColor="@color/aceptar"
            app:cornerRadius="20dp"
            android:textSize="16sp" />
    </LinearLayout>
</LinearLayout>